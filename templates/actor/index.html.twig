{% extends 'base.html.twig' %}

{% block title %}Liste des acteur.rices{% endblock %}

{% block body %}
    
    {# Affichage des flashs error et success #}
    {% for label, messages in app.flashes(['error', 'success']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}


    <h1>Liste des acteurs.rices</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Nationality</th>
                <th>Photo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actor in actors %}
            <tr>
                <td>{{ actor.id }}</td>
                <td>{{ actor.name }}</td>
                <td>{{ actor.surname }}</td>
                <td>{{ actor.nationality }}</td>
                <td>
                    <img src="{{ actor.photo }}" alt="Photo de {{ actor.name }} {{ actor.surname }}" class="img-thumbnail">
                </td>
                <td>
                    <a href="{{ path('actor_show', {'id': actor.id}) }}">voir</a>
                    <a href="{{ path('actor_edit', {'id': actor.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('actor_new') }}">Ajouter un.e acteur.rice</a>
{% endblock %}
